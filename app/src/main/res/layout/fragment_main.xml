<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.x3727349s.magic.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="p+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/masVeneno1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:text="+VIDA"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/masVida1"
        app:layout_constraintLeft_toLeftOf="@+id/masVeneno1"
        app:layout_constraintRight_toRightOf="@+id/masVeneno1"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/masVeneno1"
        app:layout_constraintBottom_toTopOf="@+id/quitarVida1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="229dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintGuide_percent="0.50329673" />


    <Button
        android:text="+Vida"
        android:layout_height="0dp"
        android:id="@+id/masVida2"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="@+id/masVeneno2"
        app:layout_constraintRight_toRightOf="@+id/masVeneno2"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/masVeneno2"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/quitarVida2" />

    <Button
        android:text="P+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/masVeneno2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:text="-Vida"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/menosVida1"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintRight_toRightOf="@+id/menosVeneno1"
        app:layout_constraintLeft_toLeftOf="@+id/menosVeneno1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/menosVeneno1"
        app:layout_constraintBottom_toTopOf="@+id/quitarVida1" />

    <Button
        android:text="P-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menosVeneno1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:text="-VIDA"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/menosVida2"
        app:layout_constraintLeft_toLeftOf="@+id/menosVeneno2"
        app:layout_constraintRight_toRightOf="@+id/menosVeneno2"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/menosVeneno2"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/quitarVida2" />

    <Button
        android:text="P-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menosVeneno2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:text="TextView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/textView"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="20/0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/masVida2"
        app:layout_constraintRight_toLeftOf="@+id/menosVida2"
        app:layout_constraintBottom_toBottomOf="@+id/menosVeneno2"
        android:textSize="75sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/menosVida2" />

    <TextView
        android:text="20/0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        app:layout_constraintRight_toLeftOf="@+id/menosVeneno1"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/masVida1"
        android:layout_marginLeft="8dp"
        android:textSize="75sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/masVida1"
        app:layout_constraintTop_toTopOf="@+id/masVeneno1" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/quitarVida1"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:text="UP"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintBottom_toTopOf="@+id/guideline" />

    <Button
        android:text="DOWN"
        android:layout_width="match_parent"
        android:id="@+id/quitarVida2"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/quitarVida1" />

</android.support.constraint.ConstraintLayout>
